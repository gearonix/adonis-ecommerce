{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "src",
    "paths": {
      "shared/*": [
        "shared/*"
      ],
      "widgets/*": [
        "widgets/*"
      ],
      "entities/*": [
        "entities/*"
      ],
      "features/*": [
        "features/*"
      ],
      "pages/*": [
        "pages/*"
      ],
      "app/*": [
        "app/*"
      ],
      "public/*": [
        "public/*"
      ],
      "mui": [
        "shared/lib/mui/index.ts"
      ],
      "icons": [
        "shared/helpers/icons.ts"
      ],
      "dev/*": [
        "../dev/*"
      ]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "./jest.setup.ts"],
  "exclude": ["node_modules"],
  "types": ["node", "jest", "@testing-library/jest-dom"]
}
